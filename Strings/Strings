//code to finds vowels in a code
#include <stdio.h>

int main() {
    char str[100];
    int i = 0, vowels = 0;

    printf("Enter a string (single word only): ");
    scanf("%s", str);  // Takes input until first whitespace

    while (str[i] != '\0') {
        char ch = str[i];

        if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u' ||
            ch == 'A' || ch == 'E' || ch == 'I' || ch == 'O' || ch == 'U') {
            vowels++;
        }

        i++;
    }

    printf("Number of vowels: %d\n", vowels);

    return 0;
}
